  </xsd:complexType>

  <xsd:element name="keyword" type="xsd:string">
    <xsd:annotation>
      <xsd:documentation>
        Keywords are usually printed in bolder font weight.
      </xsd:documentation>
    </xsd:annotation>
  </xsd:element>

</xsd:schema>
